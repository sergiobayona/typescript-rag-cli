{
    "name": "typescript-rag-cli",
    "version": "1.0.0",
    "description": "Interactive CLI for Retrieval-Augmented Generation in TypeScript",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "ts-rag": "dist/bin.js"
    },
    "files": [
        "dist",
        "README.md",
        "MIT-LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "start": "ts-node src/bin.ts",
        "dev": "ts-node-dev --respawn src/bin.ts",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "keywords": [
        "rag",
        "openai",
        "embeddings",
        "vector-search",
        "cli",
        "html-processing"
    ],
    "author": "Sergio Bayona",
    "license": "MIT",
    "dependencies": {
        "commander": "^11.1.0",
        "dotenv": "^16.4.5",
        "inquirer": "^8.2.5",
        "openai": "^4.28.0",
        "ora": "^5.4.1",
        "cheerio": "^1.0.0-rc.12",
        "undici": "^5.28.2"
    },
    "devDependencies": {
        "@types/inquirer": "^8.2.10",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.19",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "type": "commonjs",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/typescript-rag-cli.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/typescript-rag-cli/issues"
    },
    "homepage": "https://github.com/yourusername/typescript-rag-cli#readme",
    "engines": {
        "node": ">=14.0.0"
    },
    "private": false
}